<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReceiptDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">


        <TextView
            android:id="@+id/viewDetailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name of product"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewDetail2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewDetailName"
            android:layout_marginTop="20dp"
            android:text="Data zakupu:"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/viewDetailDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/viewDetail2"
            android:layout_below="@id/viewDetailName"
            android:paddingLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Date of purchase"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewDetail3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewDetail2"
            android:text="Czas gwarancji (lata):"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/viewDetailYears"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/viewDetail3"
            android:layout_below="@id/viewDetailDate"
            android:paddingLeft="10dp"
            android:text="Time"
            android:textColor="@android:color/black"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/viewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewDetailYears"
            android:layout_marginTop="40dp"
            android:text="TwÃ³j paragon:"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewText"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            app:srcCompat="@color/colorPrimary" />


    </RelativeLayout>
</ScrollView>